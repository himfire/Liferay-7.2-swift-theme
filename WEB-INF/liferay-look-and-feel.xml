<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.2.0+</version>
	</compatibility>
	<theme id="swift-v1" name="swift-v1">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="header-show" type="checkbox" value="true" />
			<setting configurable="true" key="footer-show" type="checkbox" value="true" />
			<setting configurable="true" key="address1" type="text"/>
			<setting configurable="true" key="address2" type="text"/>
			<setting configurable="true" key="phone" type="text"/>
			<setting configurable="true" key="fax" type="text"/>
			<setting configurable="true" key="email" type="text"/>
			<setting configurable="true" key="facebook" type="text"/>
			<setting configurable="true" key="twitter" type="text"/>
			<setting configurable="true" key="instagram" type="text"/>
		</settings>
		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>
